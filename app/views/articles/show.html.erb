<div class="mb-4">
  <%= link_to articles_path, class: 'btn btn-outline' do %>
    <i class="fas fa-arrow-left"></i> Back to articles
  <% end %>
</div>

<article class="article p-4">
  <h1><%= @article.title %></h1>
  
  <div class="article-content mb-4">
    <%= simple_format(@article.content) %>
  </div>
  
  <div class="d-flex gap-2">
    <%= link_to edit_article_path(@article), class: 'btn btn-primary' do %>
      <i class="fas fa-edit"></i> Edit
    <% end %>
    <%= link_to article_path(@article), data: { turbo_method: :delete }, class: 'btn btn-danger' do %>
      <i class="fas fa-trash-alt"></i> Delete
    <% end %>
  </div>
</article> 