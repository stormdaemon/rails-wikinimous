<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Articles</h1>
    <%= link_to new_article_path, class: 'btn btn-primary' do %>
      <i class="fas fa-plus"></i> New article
    <% end %>
  </div>

  <div class="articles">
    <% @articles.each do |article| %>
      <div class="article-card mb-4 p-4 bg-white shadow-sm rounded">
        <h2><%= link_to article.title, article_path(article), class: 'text-decoration-none' %></h2>
        <p class="text-muted mb-2">
          <small><%= article.content.truncate(150) %></small>
        </p>
        <div class="d-flex">
          <%= link_to article_path(article), class: 'me-2 btn btn-sm btn-outline-primary' do %>
            <i class="fas fa-eye"></i> Show
          <% end %>
          <%= link_to edit_article_path(article), class: 'me-2 btn btn-sm btn-outline-warning' do %>
            <i class="fas fa-edit"></i> Edit
          <% end %>
          <%= link_to article_path(article), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' do %>
            <i class="fas fa-trash-alt"></i> Delete
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div> 