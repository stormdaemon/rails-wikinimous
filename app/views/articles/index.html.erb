<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>My Articles</h1>
    <%= link_to new_article_path, class: 'btn btn-primary' do %>
      <i class="fas fa-plus"></i> New article
    <% end %>
  </div>

  <div class="articles">
    <% @articles.each do |article| %>
      <div class="article-card p-4">
        <h2><%= link_to article.title, article_path(article) %></h2>
        <div class="content-preview mb-3">
          <%= article.content.truncate(150) %>
        </div>
        <div class="card-footer">
          <%= link_to article_path(article), class: 'btn btn-outline' do %>
            <i class="fas fa-eye"></i> View
          <% end %>
          <%= link_to edit_article_path(article), class: 'btn btn-outline' do %>
            <i class="fas fa-edit"></i> Edit
          <% end %>
          <%= link_to article_path(article), data: { turbo_method: :delete }, class: 'btn btn-outline' do %>
            <i class="fas fa-trash-alt"></i> Delete
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div> 